BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            text: app.input_message
            id: user_input
            on_text: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: increment
                text: 'up'
                on_press:  app.handle_increment(1) # + increment (up)
            Button:
                text: 'down'  # - increment (down)
                on_press: app.handle_increment(-1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_calculate()
    Label:
        id: output_label
        text: app.output_message